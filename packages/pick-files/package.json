{
  "author": {
    "email": "contact@thangved.com",
    "name": "Kim Minh Thang (@thangved)",
    "url": "https://profile.thangved.com"
  },
  "description": "A simple and efficient file picker library for web applications",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "browser",
    "js",
    "file",
    "file-picker"
  ],
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "name": "@thangved/pick-files",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "NODE_ENV=production tsup && npm run check-exports",
    "check-exports": "attw --pack .",
    "dev": "tsup --watch"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "version": "1.0.11-0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thangved/pick-files.git",
    "directory": "packages/pick-files"
  }
}
